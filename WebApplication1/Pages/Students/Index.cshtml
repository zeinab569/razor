@page
@model WebApplication1.Pages.Students.IndexModel
@{
}
<a asp-page="Create" class="btn btn-info">Create</a> 
<table class="table">
    <thead class="thead-dark">
        <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Age</td>
            <td></td>
        </tr>
    </thead>

    <tbody>
    @foreach (var item in Model.students)
    {
        <tr class="table-warning">
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Age</td>
            <td>
                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                <a  asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>